            {% if produtos[1].available %}
              <button class="buy-btn">Comprar</button>
            {% else %}
              <button class="buy-btn" style="background-color: #DBDBDB;" disabled>Indisponível</button>
            {% endif %}
          </div>
        </div>
      {% endif %}
      {% if produtos.size > 2 %}
        <div class="product-card">
          <img src="{{ produtos[2].featured_image | image_url }}" alt="{{ produtos[2].title }}">
