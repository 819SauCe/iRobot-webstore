<div class="vitrine">
  <h2 class="title">{{ section.settings.title }}</h2>
  <h3 class="subtitle">{{ section.settings.subtitle }}</h3>
  <div class="product-grid">
    {% for product in section.settings.collection.products limit: 9 %}
      <div class="product-card">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}">
        </a>
        <div class="info">
          <a href="{{ product.url }}">
            <h3>{{ product.title }}</h3>
          </a>
          <p class="description">{{ product.description | strip_html | truncate: 150 }}</p>
          <p class="old-price">{{ product.compare_at_price | money }}</p>
          <p class="price">{{ product.price | money }}<span class="pix">
              via pix</span>
          </p>
          <p class="installments" style="font-size: 12px;">Em até 6x de R$ 816,66 sem juros</p>
          <p style="color: #6C6C6C; font-size:12px;">ou 10x de 516,82</p>
        </div>
        <div class="bottom-section">
          {% if product.available %}
            <a href="{{ product.url }}" class="buy-btn">Comprar</a>
          {% else %}
            <button
              class="buy-btn"
              style="background-color: #DBDBDB; cursor: not-allowed;"
              disabled>Indisponível</button>
          {% endif %}
          <div class="extra-info">
            <img
              src="{{ 'ideal_pet.png' | asset_url }}"
              alt="Ícone Pet"
              class="icon-pet">IDEAL PARA PET
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Vitrine",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Título Principal"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtítulo"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Coleção"
      }
    ],
    "presets": [
      {
        "name": "Vitrine"
      }
    ]
  }

{% endschema %}