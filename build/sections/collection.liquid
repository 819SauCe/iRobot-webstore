<div class="vitrine-catalogo">

  <h2 style="text-align: center; margin-top: 37px">{{ section.settings.titulo_catalogo }}</h2>
  <div class="product-grid">
    {% paginate collection.products by 9 %}
      {% for product in collection.products %}
        {% render 'general__product-item'
          , product: product %}
      {% endfor %}

      <div class="pagination">
        {% if paginate.pages > 1 %}
          <nav>
            <ul>
              {% if paginate.previous %}
                <li>
                  <a href="{{ paginate.previous.url }}">&laquo; Anterior</a>
                </li>
              {% endif %}
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <li>
                    <a href="{{ part.url }}">{{ part.title }}</a>
                  </li>
                {% else %}
                  <li class="active">{{ part.title }}</li>
                {% endif %}
              {% endfor %}
              {% if paginate.next %}
                <li>
                  <a href="{{ paginate.next.url }}">Próxima &raquo;</a>
                </li>
              {% endif %}
            </ul>
          </nav>
        {% endif %}
      </div>

    {% endpaginate %}
  </div>
</div>

{% schema %}
  {
    "name": "titulo_catalogo",
    "settings": [
      {
        "type": "text",
        "id": "titulo_catalogo",
        "label": "Título",
        "default": "Seu título aqui"
      }
    ]
  }
{% endschema %}